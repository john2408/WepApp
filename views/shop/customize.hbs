<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Personalización del Producto</h1>
        <h4>Valor Total: ${{total}}</h4>

        <form id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Nombre de quién Envia</label>
                        <input type="text" id="name" class="form-control" >
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="name">Telefono de quién Envia</label>
                        <input type="text" id="name" class="form-control" >
                    </div>
                </div>


                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address">Nombre de quién Recibe</label>
                        <input type="text" id="address" class="form-control">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Dirección de Entrega</label>
                        <input type="text" id="card-name" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number">Mensaje</label>
                        <input type="text" id="card-number" class="form-control" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-month">Hora de Entrega</label>
                                <input type="text" id="card-expiry-month" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-year">Teléfono de Contacto</label>
                                <input type="text" id="card-expiry-year" class="form-control" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-cvc">Comentarios</label>
                        <input type="text" id="card-cvc" class="form-control" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success" >Enviar Pedido</button>
            <a href="/" class="btn btn-success pull-right" role="button">Seguir Comprando</a>
        </form>
    </div>
</div>

