{{# if products}}

    <div class = "row">
        <div class = "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3"> 
            <ul class= 'list-group'>
                {{# each products}}
                <li class = 'list-group-item'>
                    <span class="badge">{{this.qty}} </span>
                    <strong> {{this.item.title}} </strong>
                        <div class="cart">
                            <img src="{{this.item.imagePath}}">
                        </div>
                        <div>
                            <span class="label label-success">{{this.price}}</span>
                        </div>
                    <div class="btn-group">
                        <button class="btn btn-primary btn-xs dropdown-toggle" type = "button" data-toggle = "dropdown"> Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li> <a href = "#"> Reducir Cantidad</a></li>
                                <li> <a href = "#"> Remover </a></li>
                            </ul>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class = "row">
        <div class = "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Total: $ {{ totalPrice}} COP </strong>
        </div>
    </div>

    <hr>

    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group">
                        <a href="/send-order" type = "button" class = "btn btn-success">Enviar Pedido</a>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <a href="/customize" type = "button" class = "btn btn-success">Personaliza tu Pedido</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{else}}

    <div class = "row">
        <div class = "col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2>El Carrito está vacío</h2>
        </div>
    </div>

{{/if}}


